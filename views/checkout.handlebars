<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <main class="container">
        {{#if user}}
        <h1>Finalizar Compra</h1>
        <form id="payment-form">
            <div id="card-element">
                <!-- Elemento de Stripe para la tarjeta -->
            </div>
            <button type="submit">Pagar</button>
        </form>
        {{else}}
        <p>Debes estar <a href="/login">logueado</a> para realizar una compra.</p>
        {{/if}}
    </main>

    {{#if user}}
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const stripe = Stripe('{{YOUR_PUBLIC_STRIPE_KEY}}');
            const elements = stripe.elements();
            const cardElement = elements.create('card');
            cardElement.mount('#card-element');

            const form = document.getElementById('payment-form');
            form.addEventListener('submit', async (event) => {
                event.preventDefault();

                const { paymentMethod, error } = await stripe.createPaymentMethod({
                    type: 'card',
                    card: cardElement,
                });

                if (error) {
                    console.error(error);
                } else {
                    const cart = JSON.parse(localStorage.getItem('cart')) || [];
                    const response = await fetch('/cart/checkout', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            paymentMethodId: paymentMethod.id,
                            cart,
                        }),
                    });

                    const result = await response.json();

                    if (result.error) {
                        console.error(result.error);
                    } else {
                        localStorage.removeItem('cart'); // Limpiar el carrito despu√©s de la compra
                        window.location.href = '/success';
                    }
                }
            });
        });
    </script>
    {{/if}}

</body>
</html>
