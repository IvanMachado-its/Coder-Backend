<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tienda Online</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <nav>
        <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="/cart">Ver Carrito ðŸ›’<span id="cart-count">0</span></a></li>
        </ul>
    </nav>

    <main class="container">
        <h1>Bienvenido a la Tienda Online</h1>
        <h2>Productos Destacados</h2>
        <div id="notification" style="display:none;">Producto agregado al carrito</div>
        <div class="products">
            {{#each products}}
            <div class="product-card">
                <h3>{{this.name}}</h3>
                <p>{{this.description}}</p>
                <p>Precio: ${{this.price}}</p>
<!-- Parte de la vista de productos -->
<form class="add-to-cart-form" method="POST" action="/cart/add">
    <input type="hidden" name="productId" value="{{this._id}}">
    <label for="quantity">Cantidad:</label>
    <input type="number" name="quantity" value="1" min="1">
    <button type="submit" class="btn">AÃ±adir al Carrito</button>
</form>

            </div>
            {{/each}}
        </div>
    </main>

    <script>
        document.querySelectorAll('.add-to-cart-form').forEach(form => {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();  // Prevenir el comportamiento por defecto del formulario

                const formData = new FormData(form);
                const data = {
                    productId: formData.get('productId'),
                    quantity: formData.get('quantity')
                };

                const response = await fetch('/cart/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data),
                });

                if (response.ok) {
                    const result = await response.json();
                    const notification = document.getElementById('notification');
                    notification.style.display = 'block';
                    notification.textContent = result.message;

                    // Actualizar el contador del carrito
                    const cartCount = document.getElementById('cart-count');
                    cartCount.textContent = result.cart.length;

                    setTimeout(() => {
                        notification.style.display = 'none';
                    }, 3000);
                } else {
                    console.error('Error al agregar al carrito');
                }
            });
        });
    </script>
</body>
</html>
