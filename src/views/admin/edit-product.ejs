<%- include('partials/header') %>

<section class="edit-product">
    <h2>Edit Product</h2>
    <form action="/admin/products/<%= product._id %>?_method=PUT" method="POST">
        <input type="text" name="name" value="<%= product.name %>" placeholder="Product Name" required>
        <input type="number" name="price" value="<%= product.price %>" placeholder="Price" required>
        <textarea name="description" placeholder="Description"><%= product.description %></textarea>
        <input type="url" name="imageUrl" value="<%= product.imageUrl %>" placeholder="Image URL">
        <button type="submit">Save Changes</button>
    </form>
</section>

<%- include('partials/footer') %>
