<%- include('partials/header') %>

<section class="checkout">
    <h2>Checkout</h2>
    <form action="/user/checkout" method="POST">
        <h3>Order Summary:</h3>
        <ul>
            <% cart.forEach(item => { %>
                <li><%= item.name %> - $<%= item.price %></li>
            <% }); %>
        </ul>
        <p>Total: $<%= total %></p>
        <button type="submit">Place Order</button>
    </form>
</section>

<%- include('partials/footer') %>
