<%- include('partials/header') %>

<section class="cart">
    <h2>Cart</h2>
    <ul>
        <% cart.forEach(item => { %>
            <li><%= item.name %> - $<%= item.price %> <a href="/user/cart/<%= item._id %>?_method=DELETE">Remove</a></li>
        <% }); %>
    </ul>
    <a href="/user/checkout">Checkout</a>
</section>

<%- include('partials/footer') %>
